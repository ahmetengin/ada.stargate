  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "vite.config.ts",
    "scripts/**/*.mjs",
    "types.ts"
  ]
}